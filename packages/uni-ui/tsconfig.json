{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "types": ["@dcloudio/types", "vite/client", "@types/node", "vitest/globals", "jest", "node"],
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "baseUrl": "."
  },
  "include": ["**/*.ts", "**/*.vue"],
  "exclude": [
    "node_modules",
    "uni_modules",
    "lib",
    "**/__test__/**/*",
    "**/__tests__/**/*",
    "**/*/common.ts",
    "vitest.config.ts"
  ]
}
