{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "es2015",
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "useDefineForClassFields": true,
    "resolveJsonModule": true
  },
  "include": ["*.ts"],
  "exclude": ["./node_modules"]
}
